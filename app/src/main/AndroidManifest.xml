<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trip">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".activities.Dialog"
            android:excludeFromRecents="false"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert"></activity>
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".activities.HomeNavigationActivity"
            android:label="@string/title_activity_home_navigation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.AllTripsActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TempAddTripActivity" />
        <activity android:name=".activities.TempRoutingActivity" />

        <receiver
            android:name=".utils.AlertReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
